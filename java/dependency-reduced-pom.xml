<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.kd</groupId>
  <artifactId>misc-graphics</artifactId>
  <version>1.0</version>
  <build>
    <resources>
      <resource>
        <directory>d:/code/misc-graphics/java/src/main/resources</directory>
        <excludes>
          <exclude>dream210/**</exclude>
          <exclude>win311/**</exclude>
          <exclude>fake-demo/**</exclude>
          <exclude>hellogdx/**</exclude>
          <exclude>anniversaries/**</exclude>
          <exclude>anniversaries27/**</exclude>
          <exclude>anniversaries28/**</exclude>
          <exclude>anniversaries29/**</exclude>
          <exclude>anniversaries30/**</exclude>
          <exclude>bkg/**</exclude>
          <exclude>kickass/**</exclude>
          <exclude>winter/**</exclude>
          <exclude>stickfighters/**</exclude>
          <exclude>spritesheets/**</exclude>
        </excludes>
      </resource>
    </resources>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.8.1</version>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>3.3.0</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>org.kd.goodjob.GoodJobMrJobs</mainClass>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
      <exclusions>
        <exclusion>
          <artifactId>hamcrest-core</artifactId>
          <groupId>org.hamcrest</groupId>
        </exclusion>
      </exclusions>
    </dependency>
  </dependencies>
  <properties>
    <maven.compiler.target>11</maven.compiler.target>
    <maven.compiler.source>11</maven.compiler.source>
    <gdx.version>1.10.0</gdx.version>
  </properties>
</project>
